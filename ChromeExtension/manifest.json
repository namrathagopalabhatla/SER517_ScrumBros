{
  "manifest_version": 3,
  "name": "Youtube Comment Analyser",
  "version": "1.0",
  "description": "A Chrome extension to analyze YouTube comments to give you an unbiased viewer sentiment.",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js", "libs/chart.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/chart.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
